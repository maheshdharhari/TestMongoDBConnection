<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <connectionStrings>
    <add name="local" connectionString="mongodb://localhost:27017/admin" />
    <add name="analytics" connectionString="mongodb://{user-name}:{password}@{host-primary-node}:{port-1},{host-secondary-node}:{port-2}/{database-name}?ssl=true;replicaSet={replica-name};connectTimeout=1m;maxIdleTime=1m;socketTimeout=1m" />
    <add name="tracking.live" connectionString="mongodb://{user-name}:{password}@{host-primary-node}:{port-1},{host-secondary-node}:{port-2}/{database-name}?ssl=true;replicaSet={replica-name};connectTimeout=1m;maxIdleTime=1m;socketTimeout=1m" />
    <add name="tracking.history" connectionString="mongodb://{user-name}:{password}@{host-primary-node}:{port-1},{host-secondary-node}:{port-2}/{database-name}?ssl=true;replicaSet={replica-name};connectTimeout=1m;maxIdleTime=1m;socketTimeout=1m" />
    <add name="tracking.contact" connectionString="mongodb://{user-name}:{password}@{host-primary-node}:{port-1},{host-secondary-node}:{port-2}/{database-name}?ssl=true;replicaSet={replica-name};connectTimeout=1m;maxIdleTime=1m;socketTimeout=1m" />
  </connectionStrings>
  
</configuration>